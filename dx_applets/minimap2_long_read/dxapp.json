{
  "name": "minimap2_long_read",
  "title": "Minimap2 Long Read",
  "summary": "minimap2_long_read",
  "dxapi": "1.0.0",
  "inputSpec": [
    {
      "name": "input_reads",
      "help": "",
      "class": "array:file",
      "patterns": ["*fastq.gz", "*.fq.gz"],
      "optional": false
    },
    {
      "name": "reference",
      "help": "Reference sequence",
      "class": "file",
      "patterns": ["*.fa.gz", "*.fasta.gz"],
      "optional": true
    },
    {
      "name": "index",
      "help": "Pre-built reference index",
      "class": "file",
      "patterns": ["*.mmi"],
      "optional": true
    },
    {
      "name": "sample",
      "help": "",
      "class": "string",
      "optional": false
    },
    {
      "name": "preset",
      "help": "Preset options for different sequencing technologies",
      "class": "string",
      "optional": true,
      "choices": [
        "map-pb",
        "map-ont",
        "asm5",
        "asm10",
        "asm20",
        "ava-pb",
        "ava-ont",
        "splice",
        "sr"
      ]
    }
  ],
  "outputSpec": [
    {
      "name": "output_bam",
      "help": "",
      "class": "file",
      "patterns": ["*.bam"]
    },
    {
      "name": "output_bai",
      "help": "",
      "class": "file",
      "patterns": ["*.bai"]
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "14.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "distribution": "Ubuntu"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x32"
        }
      }
    }
  }
}
