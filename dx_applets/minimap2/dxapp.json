{
  "name": "minimap2",
  "title": "Minimap2",
  "summary": "minimap2",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "reads_fastqgz",
      "label": "Reads",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fastq.gz", "*.fq.gz", "*.fasta.gz", "*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "reads2_fastqgz",
      "label": "Reads (right mates)",
      "class": "file",
      "optional": true,
      "patterns": [
        "*.fastq.gz", "*.fq.gz", "*.fasta.gz", "*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "genome_fastagz",
      "label": "Genome",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fasta.gz", "*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "sequencing_technology",
      "label": "Sequencing technology",
      "class": "string",
      "choices": ["illumina", "pacbio", "ont"],
      "default": "pacbio",
      "optional": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "mapped_reads",
      "label": "Mapped readas",
      "class": "file",
      "patterns": [
        "*.bam"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "python2.7",
    "release": "14.04",
    "distribution": "Ubuntu",
    "file": "src/minimap2.py"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x32"
        }
