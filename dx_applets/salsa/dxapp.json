{
  "name": "salsa",
  "title": "Salsa",
  "summary": "salsa",
  "dxapi": "1.0.0",
  "version": "2.2.0",
  "inputSpec": [
    {
      "name": "input_assembly",
      "label": "Assembly to scaffold",
      "help": "",
      "class": "file",
      "patterns": ["*.fa", "*.fasta", "*.fa.gz", "*.fasta.gz"],
      "optional": false
    },
    {
      "name": "hic_alignments",
      "label": "Hi-C alignment",
      "help": "",
      "class": "array:file",
      "patterns": ["*.bam", "*.bam.gz"],
      "optional": false
    },
    {
      "name": "restriction_enzyme_bases",
      "label": "Restriction enzyme bases",
      "help": "",
      "class": "array:string",
      "optional": false
    },
    {
      "name": "filter_alignments",
      "label": "Filter bam file to exclude mappings to non-existent contigs?",
      "class": "boolean",
      "optional": false,
      "default": true,
      "help": ""
    },
    {
      "name": "input_assembly_graph",
      "label": "Assembly graph for assembly to scaffold",
      "help": "",
      "class": "file",
      "patterns": ["*.gfa", "*.gfa.gz"],
      "optional": true
    }
  ],
  "outputSpec": [
    {
      "name": "final_scaffold_fasta",
      "label": "Final Scaffold Fasta",
      "help": "",
      "class": "file",
      "patterns": ["*.fasta.gz"]
    },
    {
      "name": "final_scaffold_agp",
      "label": "Final Scaffold AGP",
      "help": "",
      "class": "file",
      "patterns": ["*.agp.gz"]
    },
    {
      "name": "scaffold",
      "label": "Scaffold",
      "help": "",
      "class": "file",
      "patterns": ["*.tar.gz"]
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "python2.7",
    "file": "src/code.py",
    "systemRequirements": {
      "*": {
        "instanceType": "mem3_ssd1_x32"
      }
    },
    "assetDepends": [{"id": "record-FVp4p980z7zB25Xk2bQGBxfG"}],
    "distribution": "Ubuntu",
    "release": "16.04"
  },
  "access": {
    "network": [
      "*"
    ]
  }
}
