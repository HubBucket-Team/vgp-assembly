{
   "name": "minimap2_align_longread",
   "title": "Minimap2 Aligner for Long Reads",
   "billTo": "org-dnanexus",
   "inputSpec": [
    {
       "name": "reads",
       "label": "Reads",
       "patterns": ["*.subreads.bam", "*.fastq", "*.fasta", "*.fastq.gz", 
                    "*.fasta.gz", "*.fa.gz", "*.fq.gz", "*.fq", "*.fa"],
       "class": "array:file",
       "optional": false
    },
    {
        "name": "chunk_size",
        "label": "Subjob chunk size in GB",
        "class": "int",
        "optional": false,
        "default": 5
     },
    {
        "name": "datatype",
        "label": "Input data format",
        "class": "string",
        "optional": false,
        "choices": ["PacBio", "ONT", "CCS"],
        "default": "PacBio"
     },
    {
        "name": "reads_indices",
        "label": "(Optional) PacBio reads PBI indices",
        "patterns": ["*.pbi"],
        "class": "array:file",
        "optional": true
     },
    {
        "name": "genome_fastagz",
        "label": "Reference genome",
        "patterns": [
          "*.fasta",
          "*.fasta.gz",
          "*.fa",
          "*.fa.gz"
       ],
       "class": "file",
       "optional": false
    },
    {
        "name": "genome_mmi",
        "label": "Reference genome index",
        "patterns": [
          "*.mmi"
       ],
       "class": "file",
       "optional": true
    },
    {
       "name": "pbbamify",
       "label": "Run pbbamify",
       "default": true,
       "class": "boolean",
       "optional": false,
       "help": "Run pbbamify after pbmm2 to enable compatibility with Arrow. Only compatible with PacBio BAM input."
    },
    {
       "name": "output_prefix",
       "label": "Output prefix",
       "default": "mapped_reads",
       "class": "string",
       "optional": false
    }
 ],
   "outputSpec": [
      {
         "patterns": [
            "*.bam"
         ],
         "class": "array:file",
         "name": "bam_files",
         "label": "Mapped reads"
      },
      {
         "patterns": [
            "*.bai"
         ],
         "class": "array:file",
         "name": "bai_files",
         "label": "Mapped reads indices"
      },
      {
         "patterns": [
            "*.mmi"
         ],
         "class": "file",
         "optional": true,
         "name": "genome_mmi",
         "label": "Reference genome index"
      }
   ],
   "runSpec": {
      "file": "src/minimap2_align.py",
      "release": "16.04",
      "interpreter": "python2.7",
      "distribution": "Ubuntu",
      "restartableEntryPoints": "all",
      "timeoutPolicy": {
      "*": {
        "hours": 120
      }
    }
   },
