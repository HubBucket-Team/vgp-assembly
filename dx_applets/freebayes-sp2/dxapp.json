{
  "name": "freebayes-sp2",
  "title": "Freebayes contig-parallel",
  "summary": "A scaffold-based parallel version of freebayes. Please note that the app uses a lot of virtual memory: consider using at least mem3 when running the app.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "ref",
      "label": "reference fasta",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fasta.gz","*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "bam",
      "label": "alignment bam",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam"
      ],
      "help": ""
    },
    {
      "name": "bai",
      "label": "bam index",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.bam.bai"
      ],
      "help": ""
    },
    {
      "name": "skip_threshold",
      "label": "coverage for sites to be skippped (X)",
      "class": "int",
      "optional": false,
      "default": 150,
      "help": ""
    },
    {
      "name": "max",
      "label": "max coverage for sites to be processed (X)",
      "class": "int",
      "optional": false,
      "default": 200,
      "help": ""
    },
    {
      "name": "n_job",
      "label": "number of instance for distribution",
      "class": "int",
      "optional": false,
      "default": 1,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "pl_fasta",
      "label": "polished fasta",
      "class": "file",
      "patterns": [
        "*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "pl_bcf",
      "label": "polishing bcf",
      "class": "file",
      "patterns": [
        "*.bcf"
      ],
      "help": ""
    },
    {
      "name": "pl_vcf_changes",
      "label": "changes only vcf",
      "class": "file",
      "patterns": [
        "*.vcf.gz"
      ],
      "help": ""
    }
  ],
  "runSpec": {
	"execDepends": [
		{"name": "parallel"},
		{"name": "bedtools"},
        {"name": "openjdk-7-jre-headless"}
      ],
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "file": "src/freebayes-sp2.sh",
    "distribution": "Ubuntu",
    "release": "14.04"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "main": {
          "instanceType": "mem1_ssd1_x32"
        },
        "one_freebayes": {
          "instanceType": "mem1_ssd1_x8"
        },
        "merge_vcf": {
          "instanceType": "mem1_ssd1_x8"
        }
      }
    },
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem3_ssd1_x16"
        }
      }
    }
  },
  "access": {
    "project": "CONTRIBUTE",
    "allProjects": "VIEW",
    "network": [
      "*"
    ]
  }
}
