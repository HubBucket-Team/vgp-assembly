{
  "name": "asm-stats",
  "title": "Assembly statistics",
  "summary": "This apps generates summary statistics for the scaffolds and/or contigs of an assembly. If primary scaffolds have scaffold_ prefix, the p option can also produce stats for primary and alternate haplotigs. If the relative option is selected, .fasta files for primary and alternate haplotigs are generated as well.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "asm",
      "label": "Assembly (fasta)",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fasta.gz","*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "gsize",
      "label": "Genome size (bp)",
      "class": "int",
      "optional": false,
      "help": ""
    },
    {
      "name": "mode",
      "label": "[p/c] Default shows stats for both scaffolds and contigs. 'p' splits prim/alt. 'c' shows only scaffolds",
      "class": "string",
      "default": "default",
      "choices": ["default", "p", "c"],
      "optional": true,
      "help": ""
    },
    {
      "name": "ext",
      "label": "Extract also primary and alternate scaffolds?",
      "class": "boolean",
      "default": false,
      "help": ""
    }
  ],
  "outputSpec": [
    {
      "name": "asm_stats",
      "label": "Assembly stats",
      "class": "file",
      "help": ""
    },
    {
      "name": "asm_p_fasta",
      "label": "primary",
      "class": "file",
      "optional": true,
      "help": ""
    },
    {
      "name": "asm_h_fasta",
      "label": "alternate",
      "class": "file",
      "optional": true,
      "help": ""
    }
  ],
   "runSpec": {
      "execDepends": [
         {"name": "bedtools"},
         {"name": "openjdk-7-jre-headless"}
      ],
      "file": "src/asm-stats.sh",
      "release": "14.04",
      "interpreter": "bash",
      "distribution": "Ubuntu"      
   },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    },
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x4"
        }
      }
    }
  }
}
