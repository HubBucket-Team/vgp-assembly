{
  "name": "purge_dups",
  "title": "purge_dups",
  "summary": "purge_dups",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "ref_fastagz",
      "class": "file",
      "optional": false,
      "patterns": [
        "*.fasta.gz","*.fa.gz"
      ],
      "help": ""
    },
    {
      "name": "raw_reads_pacbio_fastagz",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fasta.gz","*.fa.gz", "*.fastq.gz","*.fq.gz"
      ],
      "help": ""
    },
    {
      "name": "max_genomesize",
      "label": "max genome size (Gbp)",
      "class": "int",
      "optional": false,
      "default": 4,
      "help": ""
    },
    {
      "name": "core_per_job",
      "label": "number of core per job for minimap2",
      "class": "int",
      "optional": false,
      "default": 4,
      "help": ""
    },
    {
      "name": "suffix_primary",
      "label": "purge fa suffix",
      "class": "string",
      "optional": false,
      "default": "_p1",
      "help": ""
    },
    {
      "name": "suffix_haplotig",
      "label": "hap fa suffix",
      "class": "string",
      "optional": false,
      "default": "_p2",
      "help": ""
    },
    {
      "name": "calcuts_opts",
      "label": "additional options for calcuts tool",
      "class": "string",
      "optional": true,
      "help": "if set to -d1 the genome is processed as haploid (only for trios), otherwise default is diploid"
    }
  ],
  "outputSpec": [
    {
      "name": "primary_fastagz",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "dup_fastagz",
      "class": "file",
      "patterns": [
        "*"
      ],
      "help": ""
    },
    {
      "name": "auxillary_files",
      "class": "array:file",
      "patterns": [
        "*"
      ],
      "optional": true,
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/purge_dups.sh"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem3_ssd1_x16"
        }
      },
      "assetDepends": [{"id": "record-FZkkKV00z2VXKBzJ98G245fK"}]
    }
  }
}
