{
  "name": "scaff10x",
  "title": "Scaff10x: The genome assembly pipeline based on read clustering",
  "summary": "The genome assembly pipeline based on read clustering",
  "dxapi": "1.0.0",
  "version": "2.0.2",
  "billTo": "org-dnanexus",
  "inputSpec": [
    {
      "name": "assemble_genome_fastagz",
      "help": "",
      "class": "file",
      "patterns": ["*.fasta.gz", "*.fa.gz", "*.fasta", "*.fa"],
      "optional": false
    },
    {
      "name": "scaff_R1_fastqgz",
      "help": "",
      "class": "array:file",
      "patterns": ["*R1_001.fastq.gz", "*R1_001.fq.gz", "*R1_001.fastq", "*R1_001.fq", "*BC_1.fastq.gz"],
      "optional": false
    },
    {
      "name": "scaff_R2_fastqgz",
      "help": "",
      "class": "array:file",
      "patterns": ["*R2_001.fastq.gz", "*R2_001.fq.gz", "*R2_001.fastq", "*R2_001.fq", "*BC_2.fastq.gz"],
      "optional": false
    },
    {
      "name": "output_prefix",
      "label": "Output Prefix",
      "help": "If provided, this output name is used for output files",
      "class": "string",
      "optional": true
    },
    {
      "name": "mapper_choice",
      "help": "",
      "class": "string",
      "optional": false,
      "default": "BWA",
      "choices": [
        "BWA",
        "SMALT"
      ]
    },
    {
      "name": "mapping_file",
      "help": "",
      "class": "file",
      "patterns": ["*.bam", "*.sam"],
      "optional": true
    },
    {
      "name": "alignment_option",
      "help": "do not provide -sam even if it is provided",
      "class": "string",
      "optional": false,
      "default": "-longread 1 -gap 100 -matrix 2000 -reads 12 -link 10 -block 50000"
    },
    {
      "name": "disable_break10x",
      "help": "Disable the break10x step",
      "class": "boolean",
      "optional": false,
      "default": true
    },
    {
      "name": "break10x_option",
      "help": "",
      "class": "string",
      "optional": true,
      "default": "-reads 5 -gap 100 -score 20 -cover 50 -ratio 15"
    }
  ],
  "outputSpec": [
    {
      "name": "scaffold",
      "help": "",
      "class": "file",
      "patterns": ["*.fasta.gz","*.fa.gz"]
    },
    {
      "name": "scaffold_agp",
      "help": "",
      "class": "file",
      "patterns": ["*.fasta.agp","*.fa.agp"]
    },
    {
      "name": "breakpoint",
      "help": "",
      "class": "file",
      "patterns": ["*"],
      "optional": true
    },
    {
      "name": "breakpoint_name",
      "help": "",
      "class": "file",
      "patterns": ["*"],
      "optional": true
    },
    {
      "name": "other_outputs",
      "help": "",
      "class": "array:file",
      "patterns": ["*"],
      "optional": true
    }
  ],
  "runSpec": {
    "file": "src/code.sh",
    "release": "16.04",
    "interpreter": "bash",
    "timeoutPolicy": {
      "*": {
        "hours": 72
      }
    },
    "execDepends": [{"name": "bc"}],
    "distribution": "Ubuntu"
  },
  "details": {
    "upstreamUrl": "https://github.com/wtsi-hpag/Scaff10X",
    "upstreamVersion": "4.1.0",
    "upstreamAuthor": "Zemin Ning",
    "whatsNew": "* 2.0.2 Asset bugfix, remove read_bc1/2 output\n* 2.0.1 Update input file format\n* 2.0.0 Binary upgrade to version 4.1, updated streaming of downloads.\n* 1.1.0 App now uses subjobs for pre-processing steps\n* 1.0.0 App release, added option to specify output prefix."
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {"*": {"instanceType": "mem1_ssd1_x32"}},
      "assetDepends": [{"id": "record-FXbffb00ZjQP2J6z1XypFkJp"}]
    },
    "azure:westus": {
      "systemRequirements": {"*": {"instanceType": "azure:mem1_ssd1_x16"}},
      "assetDepends": [{"id": "record-FXbj14j9BP0P2J6z1XypFv2Y"}]
    }
  }
}
