{
    "name": "pbbamify",
    "title": "PacBio PBbamify",
    "description": "pbbamify converts an arbitray aligned BAM file to a PacBio-compatible BAM file.",
    "version": "1.0.0",
    "inputSpec": [
        {
            "name": "aligned_bams",
            "class": "array:file",
            "patterns": ["*.bam"],
            "optional": false,
            "label": "Aligned BAM",
            "help": "BAM file aligned with any third party aligner"
        },
        {
            "name": "subreads_bams",
            "class": "array:file",
            "patterns": ["*.subreads.bam", "*.subreads.*--*.bam"],
            "optional": false,
            "label": "PacBio Subreads BAM",
            "help": "Raw unaligned Subreads BAM file"
        },
        {
            "name": "reference_fa",
            "class": "file",
            "patterns": ["*.fasta", "*.fasta.gz", "*.fa", "*.fa.gz"],
            "optional": false,
            "label": "Reference FASTA",
            "help": "Reference used to align reads."
        }
    ],
    "outputSpec": [
        {
            "name": "pb_bam",
            "class": "array:file",
            "patterns": ["*.bam"],
            "label": "PacBio Aligned BAMs",
            "help": "PacBio compatibe aligned BAM."
        }
    ],
    "runSpec":
    {
        "file": "src/pbbamify.py",
        "interpreter": "python2.7",
        "distribution": "Ubuntu",
        "release": "14.04"
    },
      "regionalOptions": {
        "aws:us-east-1": {"systemRequirements": {"*": {"instanceType": "mem1_ssd1_x32"}},
                          "assetDepends": [{"id": "record-FJJb4JQ00ZZQxgkz1P58K32p"}]},
        "azure:westus": {"systemRequirements": {"*": {"instanceType": "azure:mem4_ssd1_x32"}},
                         "assetDepends": [{"id": "record-FJ5z97Q0vkVV5GQyJxZPb7XQ"}]}
  }
}
