{
  "name": "proc10xg",
  "title": "Remove gembarcodes from 10x reads",
  "summary": "This apps removes the GEM barcodes from paired 10x reads. It accepts arrays of files. Filenames need to be in the form <Specied_ID>_S1_L001_R1_001.fastq.gz and paired. You can run it on small-to-large instances, depending on the number of files to process. It will use a core for each pair, so if you have 8 paired files, you should use an instance with 4 cores.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "input_fastq",
      "label": "Input fastq files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*.fastq.gz"
      ],
      "help": ""
    }
  ],
  "outputSpec": [
	{
      "name": "output_fastq",
      "class": "array:file",
      "label": "Trimmed fastq files",
      "patterns": [
        "*.fastq.gz"
      ],
      "help": ""
    }
  ],
   "runSpec": {
   "execDepends": [
    {
        "name": "parallel"
    },
	{
       "name": "python-numpy"
     }
     ],
      "file": "src/proc10xg.sh",
      "release": "16.04",
      "interpreter": "bash",
      "distribution": "Ubuntu"      
   },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd1_x4"
        }
      }
    },
    "azure:westus": {
      "systemRequirements": {
        "*": {
          "instanceType": "azure:mem1_ssd1_x4"
        }
      }
    }
  }
}
