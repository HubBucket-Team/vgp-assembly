{
  "name": "meryl_genomescope",
  "title": "Meryl and Genomescope",
  "summary": "Meryl-based kmer count and genome size estimation using Genomescope.",
  "dxapi": "1.0.0",
  "version": "0.0.1",
  "inputSpec": [
    {
      "name": "fastq",
      "label": "Illumina fastq files",
      "class": "array:file",
      "optional": false,
      "patterns": [
        "*fastq","*fastq.gz"
      ],
      "help": ""
    },
    {
      "name": "kmer",
      "label": "kmer length",
      "class": "string",
      "optional": false,
      "default": "31",
      "help": ""
    },
    {
      "name": "read_length",
      "label": "read length",
      "class": "string",
      "optional": false,
      "default": "150",
      "help": ""
    },
    {
      "name": "kmer_max",
      "label": "kmer max",
      "class": "string",
      "optional": false,
      "default": "-1",
      "help": ""
    }
  ],
  "outputSpec": [
	{
      "name": "output_genomescope",
      "class": "array:file",
      "label": "Genomescope output",
      "patterns": [
        "*"
      ],
      "help": ""
    }
  ],
  "runSpec": {
    "timeoutPolicy": {
      "*": {
        "hours": 48
      }
    },
    "interpreter": "bash",
    "release": "16.04",
    "distribution": "Ubuntu",
    "file": "src/meryl_genomescope.sh"
  },
  "regionalOptions": {
    "aws:us-east-1": {
      "systemRequirements": {
        "*": {
          "instanceType": "mem1_ssd2_x16"
        }
      }
    }
  }
}
