{
  "name": "scaffold_3_bionano_1enzyme",
  "title": "Scaffold3 Bionano 1 Enzyme Scaffold",
  "version": "1.5.0",
  "stages": [
    {
      "id": "bionano_hybrid",
      "executable": "app-bionano_hybrid_1enzyme/1.0.0"
    },
    {
      "id": "concatenate_unscaffolded",
      "executable": "app-file_concatenator/1.3.0",
      "input": {
        "files": [
          {"$dnanexus_link": {
            "outputField": "ncbi_scaffold_final",
            "stage": "bionano_hybrid"
          }
          },
          {"$dnanexus_link": {
            "outputField": "unscaffolded_final",
            "stage": "bionano_hybrid"
          }
          }
        ],
        "output_filename": "scaffold_s2.fasta.gz"
      }
    },
    {
      "id": "trim_fasta",
      "executable": "app-swiss-army-knife/2.1.4",
      "input": {
        "in": [
          {
            "$dnanexus_link": {
            "outputField": "file",
            "stage": "concatenate_unscaffolded"
            }
          }
        ],
        "cmd": "zcat < $in_name | sed -e '/^>/! s/^[Nn]\\+//g;s/[Nn]\\+$//g' | gzip > trimmed_s2.fasta.gz"
      }
    }
  ]
}
